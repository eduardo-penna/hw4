<div class="container-fluid mt-3 ms-2">

          <p class="fw-bold fs-3"><%= @place["name"] %></p>

  <% if @current_user %>

          <p>
          <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark fw-bold fs-6" >New Post</a>
          </p>

          <br>
          

      <div class="row">
          <% for post in @posts %>

          <div class="col-md-4 col-sm-6">

              <p class="fw-bold fs-5"><%= post["title"] %></p>
              <p class="fw-bold fs-6"><%= post["posted_on"] %></p>
            
                <% if post.uploaded_image.attached? %>
                      <img src=" <%= url_for(post.uploaded_image) %>" class="img-fluid">
                <% else %>
                      <img src="<%= post["image"] %>" class="img-fluid">
                <% end %>
        

              <p class="text-break mt-2"><%= post["description"] %></p>
          </div>
        <% end %>
      </div>

  <% else %>

    <p class="mt-2">Please <a href="/login">login</a> first</p>

  <% end %>

    <p>
      <a href="/places" class="btn btn-outline-dark fw-bold fs-6" >Back to All Places</a>
    </p>

</div>